<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpd"
    tools:context=".Activities.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_pic"/>

    <TextView
        android:layout_marginTop="16dp"
        android:text="Gaurav Kumar"
        android:textSize="22sp"
        android:layout_below="@id/logo"
        android:id="@+id/name"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="React, C/\C++, JAVA, Python"
        android:textSize="22sp"
        android:id="@+id/skills"
        android:layout_below="@id/name"
        android:fontFamily="@font/montserrat"
        android:textColor="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/skills"
        android:text="Connections"
        android:id="@+id/connections"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:background="@drawable/submit_button_login"
        android:textColor="@color/cpd"/>

    <TextView
        android:layout_below="@id/connections"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Accepted"
        android:id="@+id/accepted"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/submit_button_login"
        android:textColor="@color/cpd"/>

    <TextView
        android:layout_below="@id/accepted"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Rejected"
        android:id="@+id/rejected"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/submit_button_login"
        android:textColor="@color/cpd"/>

    <TextView
        android:layout_below="@id/rejected"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Log Out"
        android:id="@+id/logout"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="26sp"
        android:gravity="center"
        android:background="@drawable/submit_button_login"
        android:textColor="@color/cpd"/>

</RelativeLayout>