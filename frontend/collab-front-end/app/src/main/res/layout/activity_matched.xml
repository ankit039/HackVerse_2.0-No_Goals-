<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".Activities.MatchedActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="120dp"
        android:layout_width="150dp"
        android:id="@+id/profile_pic_1"
        android:layout_marginStart="60dp"
        android:src="@drawable/add_pic"
        android:layout_height="150dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="120dp"
        android:layout_width="150dp"
        android:id="@+id/profile_pic_2"
        android:src="@drawable/add_pic"
        android:layout_marginStart="180dp"
        android:layout_height="150dp"/>

    <TextView
        android:text="Congratulations!!!\nYou have been matched!"
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:id="@+id/text1"
        android:layout_below="@id/profile_pic_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Search More"
        android:layout_below="@id/text1"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:textAllCaps="false"
        android:textColor="@color/teal_200"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/search_more"
        android:background="@drawable/submit_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Go to Profile"
        android:id="@+id/go_to_profile"
        android:layout_marginTop="16dp"
        android:layout_below="@id/search_more"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/teal_200"
        android:paddingEnd="20dp"
        android:background="@drawable/submit_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>